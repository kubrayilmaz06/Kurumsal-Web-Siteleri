@model News.Models.HomePage.News
@{
    string cResimOnEki = "Files/WebSite_" + Convert.ToInt32(System.Configuration.ConfigurationManager.AppSettings["iCodeWebSite"]);
}
@if (Model != null)
{
    <section class="bg-white py-5">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    @if (!String.IsNullOrEmpty(Model.cSubTitle))
                    {
                        <div class="subtitle font-weight-normal">@Model.cSubTitle</div>
                    }
                    @if (!String.IsNullOrEmpty(Model.cTitle))
                    {
                        <h2 class="text-dark font-weight-bold">@Model.cTitle</h2>
                    }
                </div>
            </div>
            <div class="row">
                <div class="col-lg-6 col-xl-6 col-md-12 col-sm-12">
                    @if (!String.IsNullOrEmpty(Model.cImage) && !String.IsNullOrEmpty(Model.cTitle) && Model.cImage != "/Images/resimyok.png")
                    {
                        <div class="image rounded-0 position-relative" style="background-image:url(@Model.cImage.Replace("/Thumbnail", "").Replace(cResimOnEki, "ImagesStore"))">
                            <img src="@Model.cImage.Replace("/Thumbnail", "").Replace(cResimOnEki, "ImagesStore")" alt="@Model.cTitle" />
                        </div>
                    }
                    @if (!String.IsNullOrEmpty(Model.cTitle) && !String.IsNullOrEmpty(Model.cUrl))
                    {
                        <a href="@Model.cUrl" class="text-dark font-weight-normal"><h4>@Model.cTitle</h4></a>
                    }
                    @if (!String.IsNullOrEmpty(Model.cDescription))
                    {
                        <p class="text-muted font-weight-normal">@Model.cDescription</p>
                    }
                    @if (Model.dNewDate != null)
                    {
                        <div class="text-white date font-weight-normal position-relative">
                            @Model.dNewDate.ToString("dddd MMMM yyyy, HH:mm", System.Globalization.CultureInfo.CreateSpecificCulture("tr-TR"))
                        </div>
                    }

                </div>
                <div class="col-lg-6 col-xl-6 col-md-12 col-sm-12">
                    <div class="row">
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    @if (!String.IsNullOrEmpty(Model.cImage) && !String.IsNullOrEmpty(Model.cTitle) && Model.cImage != "/Images/resimyok.png")
                                    {
                                        <div class="image2 rounded-0 position-relative" style="background-image:url(@Model.cImage.Replace("/Thumbnail", "").Replace(cResimOnEki, "ImagesStore"))">
                                            <img src="@Model.cImage.Replace("/Thumbnail", "").Replace(cResimOnEki, "ImagesStore")" alt="@Model.cTitle" />
                                        </div>
                                    }
                                </div>
                                <div class="col-6">
                                    @if (Model.dNewDate != null)
                                    {
                                        <div class="text-white date font-weight-normal position-relative">
                                            @Model.dNewDate.ToString("dddd MMMM yyyy, HH:mm", System.Globalization.CultureInfo.CreateSpecificCulture("tr-TR"))
                                        </div>
                                    }
                                    @if (!String.IsNullOrEmpty(Model.cTitle) && !String.IsNullOrEmpty(Model.cUrl))
                                    {
                                        <a href="@Model.cUrl"><h4 class="text-dark font-weight-normal">@Model.cTitle</h4></a>
                                    }
                                    @if (!String.IsNullOrEmpty(Model.cDescription))
                                    {
                                        <p class="text-muted font-weight-normal">@Model.cDescription</p>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="row">
                                <div class="col-6">
                                    @if (!String.IsNullOrEmpty(Model.cImage) && !String.IsNullOrEmpty(Model.cTitle) && Model.cImage != "/Images/resimyok.png")
                                    {
                                        <div class="image2 rounded-0 position-relative" style="background-image:url(@Model.cImage.Replace("/Thumbnail", "").Replace(cResimOnEki, "ImagesStore"))">
                                            <img src="@Model.cImage.Replace("/Thumbnail", "").Replace(cResimOnEki, "ImagesStore")" alt="@Model.cTitle" />
                                        </div>
                                    }
                                </div>
                                <div class="col-6">
                                    @if (Model.dNewDate != null)
                                    {
                                        <div class="text-white date font-weight-normal position-relative">
                                            @Model.dNewDate.ToString("dddd MMMM yyyy, HH:mm", System.Globalization.CultureInfo.CreateSpecificCulture("tr-TR"))
                                        </div>
                                    }
                                    @if (!String.IsNullOrEmpty(Model.cTitle) && !String.IsNullOrEmpty(Model.cUrl))
                                    {
                                        <a href="@Model.cUrl"><h4 class="text-dark font-weight-normal">@Model.cTitle</h4></a>
                                    }
                                    @if (!String.IsNullOrEmpty(Model.cDescription))
                                    {
                                        <p class="text-muted font-weight-normal">@Model.cDescription</p>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


