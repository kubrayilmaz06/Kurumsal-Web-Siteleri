@model Service2.Models.HomePage.Service14
@{
    string cResimOnEki = "Files/WebSite_" + Convert.ToInt32(System.Configuration.ConfigurationManager.AppSettings["iCodeWebSite"]);
}

@if (Model != null)
{
    <section class="service-14 py-5">
        <div class="container">
            <div class="row">
                @if (Model.listModel != null && Model.listModel.Count > 0)
                {
                    for (int i = 0; i < Model.listModel.Count; i++)
                    {
                        if (Model.listModel[i] != null)
                        {
                            <div class="col-lg-3 col-xl-3 col-md-1 col-sm-1">
                                <nav>
                                    <div class="nav nav-tabs border-0" id="nav-tab" role="tablist">
                                        @if (i == 0)
                                        {
                                            <a class="nav-item nav-link active border-0 text-dark" id="nav-i-tab" data-toggle="tab" href="#nav-i" role="tab" aria-controls="nav-i" aria-selected="true">@Model.listModel[i].cTitle</a>
                                        }
                                        else
                                        {
                                            <a class="nav-item nav-link border-0 text-dark" id="nav-i-tab" data-toggle="tab" href="#nav-i" role="tab" aria-controls="nav-i" aria-selected="false">@Model.listModel[i].cTitle</a>

                                        }
                                    </div>
                                </nav>
                            </div>
                        }
                    }
                }
                @if (Model.listModel != null && Model.listModel.Count > 0)
                {
                    for (int i = 0; i < Model.listModel.Count; i++)
                    {
                        if (Model.listModel[i] != null)
                        {
                            <div class="col-lg-4 col-xl-4 col-md-1 col-sm-1">
                                <div class="tab-content" id="myTabContent">
                                    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                        <div class="card">
                                            @if (!String.IsNullOrEmpty(Model.listModel[i].cImage))
                                            {
                                                <div class="image" style="background-image:url(@Model.listModel[i].cImage.Replace(cResimOnEki, "ImagesStore")) ">
                                                    <img src="@Model.listModel[i].cImage.Replace(cResimOnEki, "ImagesStore")" alt="@Model.listModel[i].cServiceName" />
                                                </div>
                                            }
                                            @if (!String.IsNullOrEmpty(Model.listModel[i].cServiceName))
                                            {
                                                <h4 class="mt-4 mx-auto">@Model.listModel[i].cServiceName</h4>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                }
            </div>
        </div>
    </section>
}
