@model Service.Models.HomePage.Service
@{
    string cResimOnEki = "Files/WebSite_" + Convert.ToInt32(System.Configuration.ConfigurationManager.AppSettings["iCodeWebSite"]);
}

@if (Model != null)
{
    <section>
        <div class="container">
            <div class="row">
                <div class="col-md-10 offset-2">
                    <nav>
                        <div class="nav nav-tabs" id="nav-tab" role="tablist">
                            @for (int i = 0; i < Model.list.Count; i++)
                            {
                                if (i == 0)
                                {
                                    <a class="nav-item nav-link active border-0" id="nav-@i-tab" data-toggle="tab" href="#nav-@i" role="tab" aria-controls="nav-@i" aria-selected="true">@Model.list[i].cServiceName</a>
                                }
                                else
                                {
                                    <a class="nav-item nav-link border-0" id="nav-@i-tab" data-toggle="tab" href="#nav-@i" role="tab" aria-controls="nav-@i" aria-selected="false">@Model.list[i].cServiceName</a>
                                }
                            }
                        </div>
                    </nav>
                    <div class="tab-content" id="nav-tabContent">
                        @for (int i = 0; i < Model.list.Count; i++)
                        {
                            if (i == 0)
                            {
                                <div class="tab-pane fade show active" id="nav-@i" role="tabpanel" aria-labelledby="nav-home-tab">
                                    <div class="row">

                                        @for (int k = 0; k < Model.list[i].UrunListesi.Count; k++)
                                        {
                                            if (Model.list[i].UrunListesi != null)
                                            {
                                                <div class="col-md-4">
                                                    <div class="card border-0">
                                                        <div class="opacity position-absolute"></div>
                                                        @if (!String.IsNullOrEmpty(Model.list[i].UrunListesi[k].cImagePad))
                                                        {
                                                            <div class="image" style="background-image:url(@Model.list[i].UrunListesi[k].cImagePad.Replace(cResimOnEki, "ImagesStore")) ">
                                                                <img src="@Model.list[i].UrunListesi[k].cImagePad.Replace(cResimOnEki, "ImagesStore")" alt="@Model.list[i].cServiceName" />
                                                            </div>
                                                        }
                                                        @if (!String.IsNullOrEmpty(Model.list[i].UrunListesi[k].cServiceName))
                                                        {
                                                            <h4 class="mt-4 text-center">@Model.list[i].UrunListesi[k].cServiceName</h4>
                                                        }
                                                        @if (!String.IsNullOrEmpty(Model.list[i].UrunListesi[k].cURL))
                                                        {
                                                            <a class="border border-dark mb-5">Detaylı Bilgi</a>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }

                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="tab-pane fade" id="nav-@i" role="tabpanel" aria-labelledby="nav-@i-tab">
                                    <div class="row">
                                        @for (int k = 0; k < Model.list[i].UrunListesi.Count; k++)
                                        {
                                            if (Model.list[i].UrunListesi != null)
                                            {
                                                <div class="col-md-4">
                                                    <div class="card border-0">
                                                        <div class="opacity position-absolute"></div>
                                                        @if (!String.IsNullOrEmpty(Model.list[i].UrunListesi[k].cImagePad))
                                                        {
                                                            <div class="image" style="background-image:url(@Model.list[i].UrunListesi[k].cImagePad.Replace(cResimOnEki, "ImagesStore")) ">
                                                                <img src="@Model.list[i].UrunListesi[k].cImagePad.Replace(cResimOnEki, "ImagesStore")" alt="@Model.list[i].cServiceName" />
                                                            </div>
                                                        }
                                                        @if (!String.IsNullOrEmpty(Model.list[i].UrunListesi[k].cServiceName))
                                                        {
                                                            <h4 class="mt-4 text-center">@Model.list[i].UrunListesi[k].cServiceName</h4>
                                                        }
                                                        @if (!String.IsNullOrEmpty(Model.list[i].UrunListesi[k].cURL))
                                                        {
                                                            <a class="border border-dark mb-5">Detaylı Bilgi</a>
                                                            <button type="button" class="btn btn-outline-dark">Detaylı Bilgi</button>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        }
                                    </div>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
}
